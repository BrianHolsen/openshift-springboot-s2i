#!/bin/bash -e
#
# S2I run script for the 'openshift-springboot-s2i' image..
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#  https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

if [ "$JOLOKIA_ENABLED" = "true" ]
then
    echo "Jolokia enabled, starting jolokia java agent"
    export JOLOKIA_ARGS="-javaagent:/opt/jolokia/jolokia.jar=config=/opt/jolokia/etc/jolokia.properties"
fi

cd ${APP_ROOT}
exec java ${JOLOKIA_ARGS} -jar application.jar
